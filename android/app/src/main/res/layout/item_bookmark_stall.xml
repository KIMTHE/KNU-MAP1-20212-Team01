<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:id="@+id/layout_bookmark_stall">

    <ImageView
        android:id="@+id/img_bookmark_stall_status"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_round_no_stroke"
        android:elevation="16dp"
        android:src="@drawable/stall_on"
        android:scaleType="centerInside"
        android:padding="5dp" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="136dp"
        android:layout_marginTop="25dp"
        android:gravity="top"
        android:text="@string/stall_name_text"
        android:textColor="@color/text_black" />

    <TextView
        android:id="@+id/text_bookmark_stall_name"
        android:layout_width="199dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="196dp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/border_round_stroke"
        android:textColor="@color/text_black"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="136dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:text="@string/stall_intro_text"
        android:textColor="@color/text_black"
        android:gravity="top" />

    <TextView
        android:id="@+id/text_bookmark_stall_brief"
        android:layout_width="199dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="196dp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/border_round_stroke"
        android:textColor="@color/text_black"/>


</RelativeLayout>

